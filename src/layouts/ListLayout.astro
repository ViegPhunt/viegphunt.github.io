---
// List layout - For list pages (home, projects index, writeups index)
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/Header';
import ScrollToTop from '@/components/ScrollToTop';
import Footer from '@/components/Footer.astro';
import Scrollbar from '@/components/Scrollbar';
import type { ImageMetadata } from 'astro';
import data from '@/../data.json';

export interface Props {
	title?: string;
	description?: string;
	image?: string | ImageMetadata;
}

const {
	title = data.seo.defaultTitle,
	description = data.seo.defaultDescription,
	image,
} = Astro.props;
---

<BaseLayout
	title={title}
	description={description}
	image={image}
	type="website"
>
	<Scrollbar client:load />
	<div class="min-h-screen flex flex-col">
		<Header client:load pathname={Astro.url.pathname} />
		
		<main class="flex-1 w-[90%] max-w-[1200px] mx-auto pt-[100px] pb-[20px] lg:pt-[160px] lg:pb-[50px]">
			<slot />
		</main>
		
		<ScrollToTop client:load />
		<Footer />
	</div>
</BaseLayout>
